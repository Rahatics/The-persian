{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "@typescript-eslint/no-explicit-any": "off"
  },
  "env": {
    "node": true,
    "es6": true
  },
  "ignorePatterns": [
    "out",
    "dist",
    "**/*.d.ts"
  ]
}